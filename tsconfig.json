{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["ES2019"],
    "module": "commonjs",
    "target": "ES2019",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["jest", "node"],
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "include": ["src/**/*", "plugin"],
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
